<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3"
    android:layout_margin="24dp"
    android:background="@color/ediPage_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Indeks Massa Tubuh"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:layout_marginBottom="48dp"
            android:background="@color/ediIMT_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Berapa berat anda?"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/ediBerat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ediText_color"
            android:drawableStart="@drawable/weight"
            android:drawablePadding="5dp"
            android:hint="Berat Badan Anda (Kg)"
            android:inputType="numberDecimal"
            android:padding="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Berapa tinggi anda?"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="20">

            <EditText
                android:id="@+id/ediCm"
                android:layout_width="384dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="10"
                android:background="@color/ediText_color"
                android:drawableStart="@drawable/height"
                android:drawablePadding="5dp"
                android:hint="Tinggi (Cm)"
                android:inputType="numberDecimal"
                android:padding="12dp" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonHitungIMT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hitung IMT Anda"
            android:backgroundTint="@color/button_color"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"
            android:background="@color/ediText_color"
            android:padding="24dp" />

    </LinearLayout>

</ScrollView>